ROBLOXBRIDGE_HOST=127.0.0.1
ROBLOXBRIDGE_PORT=30010
ROBLOXBRIDGE_API_KEY=
ROBLOXBRIDGE_API_KEYS=
ROBLOXBRIDGE_COMMAND_LEASE_MS=120000
ROBLOXBRIDGE_MAX_RETENTION=10000
ROBLOXBRIDGE_IMPORT_DIR=/tmp/novablox-imports
ROBLOXBRIDGE_EXPORT_DIR=/tmp/novablox-exports
ROBLOXBRIDGE_MAX_UPLOAD_MB=250
# Leave unset to use default persistent path: ~/.novablox/queue-snapshot.json
# Set empty string to disable persistence.
# ROBLOXBRIDGE_QUEUE_SNAPSHOT_PATH=
ROBLOXBRIDGE_MAX_EXPIRES_IN_MS=604800000
ROBLOXBRIDGE_RATE_LIMIT_WINDOW_MS=60000
ROBLOXBRIDGE_RATE_LIMIT_MAX=600
ROBLOXBRIDGE_RATE_LIMIT_EXEMPT_LOCAL=true
# Security: when API auth is disabled, deny remote IPs by default.
ROBLOXBRIDGE_ALLOW_UNAUTHENTICATED_REMOTE=false
# Trust proxy headers only when running behind a trusted reverse proxy.
ROBLOXBRIDGE_TRUST_PROXY=false
ROBLOXBRIDGE_INTROSPECTION_DEFAULT_MAX_OBJECTS=500
ROBLOXBRIDGE_INTROSPECTION_MAX_OBJECTS=2000
ROBLOXBRIDGE_ASSISTANT_PROVIDER=deterministic
ROBLOXBRIDGE_ASSISTANT_TIMEOUT_MS=20000
ROBLOXBRIDGE_ASSISTANT_TEMPERATURE=0.15
# Optional OpenAI-compatible base URL (Ollama/LM Studio/vLLM/etc). Leave empty for OpenAI cloud.
ROBLOXBRIDGE_ASSISTANT_OPENAI_BASE_URL=
ROBLOXBRIDGE_ASSISTANT_OPENAI_MODEL=gpt-4.1-mini
ROBLOXBRIDGE_ASSISTANT_OPENROUTER_MODEL=openai/gpt-4.1-mini
ROBLOXBRIDGE_ASSISTANT_ANTHROPIC_MODEL=claude-3-5-sonnet-latest
# Optional provider keys (required only when use_llm=true and provider selected).
OPENAI_API_KEY=
OPENROUTER_API_KEY=
OPENROUTER_HTTP_REFERER=
OPENROUTER_APP_TITLE=NovaBlox
ANTHROPIC_API_KEY=
